@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">

    <div class="bg-light p-1">
        <h3>@Model.Title</h3>

        <span class="badge bg-info" style="float:right">
            <li>Price: $@Model.Price</li>
        </span>
    </div>


    <ul>
        <li>Author: @Model.Author.</li>
        <li>Publisher: @Model.Publisher</li>
        <li>Isbn: @Model.Isbn</li>
        <li>Classification: @Model.Classification</li>
        <li>PageCount: @Model.PageCount</li>
        <li>Category: @Model.Category</li>
    </ul>


    <form method="post" asp-page="/Buy">

        <input type="hidden" asp-for="@Model.Title" />
        <input tpye="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Buy</button>
        </span>
    </form>

</div>

